[
    {
        "context": "EmptyPane || ProjectPanel",
        "bindings": {
            "space f f": "file_finder::Toggle"
        }
    },
    {
        "context": "Editor",
        "bindings": {
            "alt-shift-f": "editor::Format"
        }
    },
    {
        "context": "vim_mode == normal",
        "use_layout_keys": true,
        "bindings": {
            ">": "vim::Indent",
            "<": "vim::Outdent",
            "space f f": "file_finder::Toggle"
            // "space f f": "file_finder::Toggle"
        }
    },
    {
        "context": "vim_mode == visual",
        "bindings": {
            ">": [
                "vim::Indent",
                "vim::RestoreVisualSelection"
            ],
            "<": [
                "vim::Outdent",
                "vim::RestoreVisualSelection"
            ],
            "shift-s": [
                "vim::PushOperator",
                {
                    "AddSurrounds": {}
                }
            ]
        }
    }
]
